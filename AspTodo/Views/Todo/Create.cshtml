@model AspTodo.Models.TodoItem

@{
    ViewData["Title"] = "Add todo item";
}

<h1>Add List</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripton" class="control-label"></label>
                <input asp-for="Descripton" class="form-control" />
                <span asp-validation-for="Descripton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsComplete" class="control-label"></label>
                <input asp-for="IsComplete" class="form-control" />
                <span asp-validation-for="IsComplete" class="text-danger"></span>
            </div>
            <input hidden asp-for="TodoListId" value="@Model.TodoListId" />
            <span asp-validation-for="TodoListId" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
